@model PokedexMVC.Models.Pokemon

<h2>Detalhes de @Model.Name</h2>

<div>
    <h4>Pokémon</h4>
    <hr />
    <dl class="row">
        <!-- Pokemon Name -->
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <!-- Region -->
        <dt class="col-sm-2">Região</dt>
        <dd class="col-sm-10">@Model.Region.Name</dd>

        <!-- Base Stats -->
        <dt class="col-sm-2">Ataque Base</dt>
        <dd class="col-sm-10">@Model.BaseAttackPoints</dd>

        <dt class="col-sm-2">Defesa Base</dt>
        <dd class="col-sm-10">@Model.BaseDefensePoints</dd>

        <dt class="col-sm-2">Vida Base</dt>
        <dd class="col-sm-10">@Model.BaseHealthPoints</dd>

        <dt class="col-sm-2">Velocidade Base</dt>
        <dd class="col-sm-10">@Model.BaseSpeedPoints</dd>

        <!-- Created By & On -->
        <dt class="col-sm-2">Criado em</dt>
        <dd class="col-sm-10">@Model.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Criado por</dt>
        <dd class="col-sm-10">@Model.CreatedByUser?.Email</dd>

        <!-- Updated By & On -->
        @if (Model.UpdatedOn.HasValue)
        {
            <dt class="col-sm-2">Atualizado em</dt>
            <dd class="col-sm-10">@Model.UpdatedOn?.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        }
        else
        {
            <dt class="col-sm-2">Atualizado em</dt>
            <dd class="col-sm-10"><i>Não atualizado</i></dd>
        }

        @if (!string.IsNullOrEmpty(Model.UpdatedByUserId))
        {
            <dt class="col-sm-2">Atualizado por</dt>
            <dd class="col-sm-10">@Model.UpdatedByUser?.Email</dd>
        }
        else
        {
            <dt class="col-sm-2">Atualizado por</dt>
            <dd class="col-sm-10"><i>Não atualizado</i></dd>
        }

        <!-- Image Preview -->
        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Imagem de @Model.Name" class="img-thumbnail" style="max-width:200px;" />
            </dd>
        }
        else
        {
            <dt class="col-sm-2">Imagem</dt>
            <dd class="col-sm-10"><i>Sem imagem disponível</i></dd>
        }
    </dl>

    <!-- Buttons for Edit and Back -->
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </p>
</div>
