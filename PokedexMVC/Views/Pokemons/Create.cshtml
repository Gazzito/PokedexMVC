@model PokedexMVC.Models.Pokemon

<h2>Create Pokemon</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-horizontal">
        <hr />

        <!-- Name -->
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Region -->
        <div class="form-group">
            <label asp-for="RegionId" class="control-label"></label>
            <select asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId"></select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>

        <!-- Base Stats -->
        <div class="form-group">
            <label asp-for="BaseAttackPoints" class="control-label"></label>
            <input asp-for="BaseAttackPoints" class="form-control" />
            <span asp-validation-for="BaseAttackPoints" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BaseDefensePoints" class="control-label"></label>
            <input asp-for="BaseDefensePoints" class="form-control" />
            <span asp-validation-for="BaseDefensePoints" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BaseHealthPoints" class="control-label"></label>
            <input asp-for="BaseHealthPoints" class="form-control" />
            <span asp-validation-for="BaseHealthPoints" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BaseSpeedPoints" class="control-label"></label>
            <input asp-for="BaseSpeedPoints" class="form-control" />
            <span asp-validation-for="BaseSpeedPoints" class="text-danger"></span>
        </div>

        <!-- Upload New Image -->
        <div class="form-group">
            <label>Upload New Image</label><br />
            <input asp-for="Image" type="file" id="imageUpload" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <!-- Preview of New Image -->
        <div class="form-group">
            <label>Image Preview</label><br />
            <img id="imagePreview" style="max-width: 200px; display: none;" />
        </div>

        <!-- Save Button -->
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        // Add an event listener to the image input field to handle file selection
        document.getElementById('imageUpload').addEventListener('change', function (event) {
            // Create a FileReader to read the selected image file
            var reader = new FileReader();

            // When the file is successfully read, set the image preview
            reader.onload = function (e) {
                // Set the 'src' attribute of the preview image to the file's data URL
                document.getElementById('imagePreview').src = e.target.result;
                // Display the image preview element
                document.getElementById('imagePreview').style.display = 'block';
            };

            // Read the selected file as a data URL to show it as an image preview
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>
}

