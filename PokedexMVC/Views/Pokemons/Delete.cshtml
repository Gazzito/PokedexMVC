@model PokedexMVC.Models.Pokemon

<h2>Eliminar Pokémon</h2>

<h3>Tem a certeza que quer eliminar este Pokémon?</h3>

<div>
    <h4>Pokémon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Pontos de Ataque Base
        </dt>
        <dd class="col-sm-10">
            @Model.BaseAttackPoints
        </dd>

        <dt class="col-sm-2">
            Pontos de Vida Base
        </dt>
        <dd class="col-sm-10">
            @Model.BaseHealthPoints
        </dd>

        <dt class="col-sm-2">
            Pontos de Defesa Base
        </dt>
        <dd class="col-sm-10">
            @Model.BaseDefensePoints
        </dd>

        <dt class="col-sm-2">
            Pontos de Velocidade Base
        </dt>
        <dd class="col-sm-10">
            @Model.BaseSpeedPoints
        </dd>

        <dt class="col-sm-2">
            Criado em
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>

        <dt class="col-sm-2">
            Atualizado em
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedOn?.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>

        <dt class="col-sm-2">
            Imagem
        </dt>
        <dd class="col-sm-10">
            @if (Model.Image != null && Model.Image.Length > 0)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Imagem" class="img-thumbnail" style="max-width: 200px;" />
            }
            else
            {
                <span>Sem Imagem Disponível</span>
            }
        </dd>

        <dt class="col-sm-2">
            Região
        </dt>
        <dd class="col-sm-10">
            @Model.Region?.Name
        </dd>

        <dt class="col-sm-2">
            Criado por Utilizador
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedByUser?.Email
        </dd>

        <dt class="col-sm-2">
            Atualizado por Utilizador
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedByUser?.Email
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </form>
</div>
