@model IEnumerable<PokedexMVC.Models.Pokemon>

<h2>Pokémon List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Region</th>
            <th>Attack</th>
            <th>Defense</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Region.Name</td>
                <td>@item.BaseAttackPoints</td>
                <td>@item.BaseDefensePoints</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Pokémon</a>
