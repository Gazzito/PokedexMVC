@model IEnumerable<PokedexMVC.Models.Pokemon>

@{
    ViewData["Title"] = "Pokémons";
}

<h2>Pokémons</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Região</th>
            <th>Ataque Base</th>
            <th>Defesa Base</th>
            <th>Vida Base</th>
            <th>Velocidade Base</th>
            <th>Criado por</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pokemon in Model)
        {
            <tr>
                <td>@pokemon.Name</td>
                <td>@pokemon.Region?.Name</td>
                <td>@pokemon.BaseAttackPoints</td>
                <td>@pokemon.BaseDefensePoints</td>
                <td>@pokemon.BaseHealthPoints</td>
                <td>@pokemon.BaseSpeedPoints</td>
                <td>@pokemon.CreatedByUser?.Email</td>
                <td>@pokemon.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@pokemon.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@pokemon.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@pokemon.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Criar Novo Pokémon</a>
