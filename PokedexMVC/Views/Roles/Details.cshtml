@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Users in Role: @ViewBag.RoleName</h2>

@if (Model.Count() == 0)
{
    <p>No users are assigned to this role.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>User Email</th>
                <th>User Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary">Back to Roles List</a>
