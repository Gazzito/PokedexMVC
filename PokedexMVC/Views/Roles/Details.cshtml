@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Utilizadores na Função: @ViewBag.RoleName</h2>

@if (Model.Count() == 0)
{
    <p>Não há utilizadores atribuídos a esta função.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email do Utilizador</th>
                <th>Nome do Utilizador</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary">Voltar à Lista de Funções</a>
