@model IEnumerable<PokedexMVC.Models.Pack>

<h2>Pack List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Total Bought</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pack in Model)
        {
            <tr>
                <td>@pack.Name</td>
                <td>@pack.Price</td>
                <td>@pack.TotalBought</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pack.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@pack.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@pack.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Pack</a>
