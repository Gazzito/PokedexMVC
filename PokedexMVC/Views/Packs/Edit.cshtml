@model PokedexMVC.Models.Pack

<h2>Edit Pack</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" id="packForm">
    <div class="form-horizontal">
        <hr />
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <!-- Name -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Bronze Chance -->
                <div class="form-group">
                    <label asp-for="BronzeChance" class="control-label"></label>
                    <input asp-for="BronzeChance" class="form-control" />
                    <span asp-validation-for="BronzeChance" class="text-danger"></span>
                </div>

                <!-- Silver Chance -->
                <div class="form-group">
                    <label asp-for="SilverChance" class="control-label"></label>
                    <input asp-for="SilverChance" class="form-control" />
                    <span asp-validation-for="SilverChance" class="text-danger"></span>
                </div>

                <!-- Gold Chance -->
                <div class="form-group">
                    <label asp-for="GoldChance" class="control-label"></label>
                    <input asp-for="GoldChance" class="form-control" />
                    <span asp-validation-for="GoldChance" class="text-danger"></span>
                </div>

                <!-- Platinum Chance -->
                <div class="form-group">
                    <label asp-for="PlatinumChance" class="control-label"></label>
                    <input asp-for="PlatinumChance" class="form-control" />
                    <span asp-validation-for="PlatinumChance" class="text-danger"></span>
                </div>

                <!-- Diamond Chance -->
                <div class="form-group">
                    <label asp-for="DiamondChance" class="control-label"></label>
                    <input asp-for="DiamondChance" class="form-control" />
                    <span asp-validation-for="DiamondChance" class="text-danger"></span>
                </div>

                <!-- Upload New Image -->
                <div class="form-group">
                    <label>Upload New Image</label><br />
                    <input asp-for="Image" type="file" id="fileUpload" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <!-- Preview Image -->
                <div class="form-group mt-4 mw-50">
                    @if (Model.Image != null && Model.Image.Length > 0)
                    {
                        <img id="previewImage" src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Preview" class="img-thumbnail" style="max-width: 200px;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>

            <!-- Right Column (Pokémon Selection) -->
            <div class="col-md-6">
                <!-- Dropdown for adding new Pokémon -->
                <div class="form-group">
                    <label>Add Pokémon</label>
                    <select id="availablePokemons" class="form-control">
                        <option value="">Select Pokémon to add</option>
                        @foreach (var pokemon in ViewBag.AvailablePokemons)
                        {
                            <option value="@pokemon.Value">@pokemon.Text</option>
                        }
                    </select>
                    <button type="button" id="addPokemonBtn" class="btn btn-primary mt-2">Add Pokémon</button>
                </div>

                <!-- List of Added Pokémon -->
                <div class="form-group">
                    <label>Selected Pokémon</label>
                    <ul id="selectedPokemonList" class="list-group">
                        @if (ViewBag.SelectedPokemons != null && ((IEnumerable<dynamic>)ViewBag.SelectedPokemons).Any())
                        {
                            foreach (var pokemon in ViewBag.SelectedPokemons)
                            {
                                <li class="list-group-item" data-pokemon-id="@pokemon.PokemonId">
                                    <span class="pokemon-name">@pokemon.Name</span>
                                    <button type="button" class="btn btn-danger btn-sm float-right remove-pokemon-btn">Remove</button>
                                </li>
                            }
                        }
                    </ul>
                </div>

                <!-- Hidden input to store selected Pokémon IDs -->
                @if (ViewBag.SelectedPokemons != null)
                {
                    <input type="hidden" id="selectedPokemonIds" name="selectedPokemonIds"
                           value="@string.Join(",", ((IEnumerable<dynamic>)ViewBag.SelectedPokemons).Select(p => p.PokemonId))" />
                }
            </div>
        </div>

        <!-- Save Button -->
        <div class="form-group mt-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        // Add Pokémon to the list when the "Add Pokémon" button is clicked
        $('#addPokemonBtn').click(function () {
            // Get the selected Pokémon's ID and name from the dropdown
            var selectedPokemonId = $('#availablePokemons').val();
            var selectedPokemonName = $('#availablePokemons option:selected').text();

            // Ensure a valid Pokémon is selected
            if (selectedPokemonId) {
                // Append the selected Pokémon to the list of chosen Pokémon
                $('#selectedPokemonList').append(
                    '<li class="list-group-item" data-pokemon-id="' + selectedPokemonId + '">' +
                    '<span class="pokemon-name">' + selectedPokemonName + '</span>' +
                    '<button type="button" class="btn btn-danger btn-sm float-right remove-pokemon-btn">Remove</button>' +
                    '</li>'
                );

                // Remove the Pokémon from the dropdown to prevent re-selection
                $('#availablePokemons option:selected').remove();

                // Update the hidden input field with the selected Pokémon IDs
                updateSelectedPokemonIds();
            }
        });

        // Event delegation to remove Pokémon when the "Remove" button is clicked
        $(document).on('click', '.remove-pokemon-btn', function () {
            // Get the Pokémon's ID and name from the list item being removed
            var pokemonId = $(this).closest('li').attr('data-pokemon-id');
            var pokemonName = $(this).siblings('.pokemon-name').text().trim();

            // Re-add the removed Pokémon back into the dropdown for re-selection
            $('#availablePokemons').append('<option value="' + pokemonId + '">' + pokemonName + '</option>');

            // Remove the Pokémon from the selected Pokémon list
            $(this).closest('li').remove();

            // Update the hidden input field with the new list of selected Pokémon IDs
            updateSelectedPokemonIds();
        });

        // Function to update the hidden input field with the selected Pokémon IDs
        function updateSelectedPokemonIds() {
            var selectedPokemonIds = [];
            // Iterate through the list of selected Pokémon to gather their IDs
            $('#selectedPokemonList li').each(function () {
                selectedPokemonIds.push($(this).attr('data-pokemon-id'));
            });
            // Join the IDs with commas and set them as the value of the hidden input field
            $('#selectedPokemonIds').val(selectedPokemonIds.join(','));
        }

        // Preview the image when a user uploads a file via the file input
        $(document).ready(function () {
            // When a file is selected in the file input
            $('#fileUpload').change(function () {
                var input = this;
                if (input.files && input.files[0]) {
                    // Create a FileReader to read the image data
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        // Display the uploaded image in the preview image element
                        $('#previewImage').attr('src', e.target.result);
                        $('#previewImage').show();
                    }
                    reader.readAsDataURL(input.files[0]); // Read the file as a data URL for preview
                }
            });
        });

        // Validate that the total of all chance fields (Bronze, Silver, Gold, Platinum, Diamond) equals 100 before form submission
        $('#packForm').submit(function (event) {
            // Retrieve the chance values for each rarity tier and convert them to floating-point numbers
            var bronze = parseFloat($('#BronzeChance').val()) || 0;
            var silver = parseFloat($('#SilverChance').val()) || 0;
            var gold = parseFloat($('#GoldChance').val()) || 0;
            var platinum = parseFloat($('#PlatinumChance').val()) || 0;
            var diamond = parseFloat($('#DiamondChance').val()) || 0;

            // Calculate the total sum of all rarity chances
            var total = bronze + silver + gold + platinum + diamond;

            // If the total does not equal 100, prevent form submission and display an alert
            if (total !== 100) {
                event.preventDefault();  // Stop the form from submitting
                alert("The total of all chance fields must equal 100. The current total is " + total);
            }
        });
    </script>
}
