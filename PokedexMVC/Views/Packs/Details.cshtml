@model PokedexMVC.Models.Pack

<h2>Pack Details</h2>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <!-- Name -->
            <div class="form-group">
                <label class="control-label">Name</label>
                <p class="form-control-static">@Model.Name</p>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label class="control-label">Price</label>
                <p class="form-control-static">@Model.Price</p>
            </div>

            <!-- Bronze Chance -->
            <div class="form-group">
                <label class="control-label">Bronze Chance</label>
                <p class="form-control-static">@Model.BronzeChance</p>
            </div>

            <!-- Silver Chance -->
            <div class="form-group">
                <label class="control-label">Silver Chance</label>
                <p class="form-control-static">@Model.SilverChance</p>
            </div>

            <!-- Gold Chance -->
            <div class="form-group">
                <label class="control-label">Gold Chance</label>
                <p class="form-control-static">@Model.GoldChance</p>
            </div>

            <!-- Platinum Chance -->
            <div class="form-group">
                <label class="control-label">Platinum Chance</label>
                <p class="form-control-static">@Model.PlatinumChance</p>
            </div>

            <!-- Diamond Chance -->
            <div class="form-group">
                <label class="control-label">Diamond Chance</label>
                <p class="form-control-static">@Model.DiamondChance</p>
            </div>

            <!-- Preview Image -->
            <div class="form-group mt-4 mw-50">
                @if (Model.Image != null && Model.Image.Length > 0)
                {
                    <img id="previewImage" src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Pack Image" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </div>
        </div>

        <!-- Right Column (Pokémon Selection) -->
        <div class="col-md-6">
            <!-- List of Added Pokémon -->
            <div class="form-group">
                <label>Selected Pokémon</label>
                <ul id="selectedPokemonList" class="list-group">
                    @if (ViewBag.SelectedPokemons != null && ((IEnumerable<dynamic>)ViewBag.SelectedPokemons).Any())
                    {
                        foreach (var pokemon in ViewBag.SelectedPokemons)
                        {
                            <li class="list-group-item">
                                <span class="pokemon-name">@pokemon.Name</span>
                            </li>
                        }
                    }
                    else
                    {
                        <p>No Pokémon added</p>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- Buttons for Edit and Back -->
    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>
