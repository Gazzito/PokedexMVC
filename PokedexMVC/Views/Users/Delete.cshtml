@model Microsoft.AspNetCore.Identity.IdentityUser

<h2>Eliminar Utilizador</h2>

<div>
    <h4>Tem a certeza de que deseja eliminar este utilizador?</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Nome de Utilizador</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
