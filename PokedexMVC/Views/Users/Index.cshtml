@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<h2>Users List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="Users" class="btn btn-primary">Create New User</a>
