@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Users List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="AssignRole" asp-controller="Roles" asp-route-userId="@user.Id" class="btn btn-success">Assign Role</a> <!-- New button -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New User</a>
