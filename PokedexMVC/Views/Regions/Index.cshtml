@model IEnumerable<PokedexMVC.Models.Region>

@{
    ViewData["Title"] = "Regions";
}

<h2>Regions</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Name</td>
                <td>@region.CreatedByUserId</td> <!-- This will now display the username instead of the GUID -->
                <td>@region.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@region.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@region.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@region.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Region</a>
