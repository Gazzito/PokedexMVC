<div class="container mt-5">
    <h2 class="text-center">Admin Dashboard</h2>
    <p class="text-center">Welcome to the Admin Dashboard! You can manage various aspects of the application here.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View and manage users in the system.</p>
                    <a asp-action="Index" asp-controller="Users" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Roles</h5>
                    <p class="card-text">Manage roles and permissions.</p>
                    <a asp-action="Index" asp-controller="Roles" class="btn btn-primary">Go to Roles</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Pokémon</h5>
                    <p class="card-text">Add, edit, and remove Pokémon from the system.</p>
                    <a asp-action="Index" asp-controller="Pokemons" class="btn btn-primary">Go to Pokémon</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Packs</h5>
                    <p class="card-text">Add, edit, and remove card packs from the system.</p>
                    <a asp-action="Index" asp-controller="Packs" class="btn btn-primary">Go to Packs</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Regions</h5>
                    <p class="card-text">Add, edit, and manage Pokémon regions.</p>
                    <a asp-action="Index" asp-controller="Regions" class="btn btn-primary">Go to Regions</a>
                </div>
            </div>
        </div>
    </div>
</div>
